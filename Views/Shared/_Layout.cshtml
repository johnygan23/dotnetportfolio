@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/styles/site.css"/>
    </head>

    <body>
        <div class="navbar-container">
            <div class="name-logo">
                <img src="~/images/logo.png" alt="logo">
                <h2>GAN SIONG BIN</h2>
            </div>
            <ul class="navbar">
                <li><span id="nav-brand" class="hidden"></span></li>
                <li><a class="nav-link @(currentAction == "Index" ? "active" : "")" href="/">Home</a></li>
                <li><a class="nav-link @(currentAction == "About" ? "active" : "")" href="/about">About</a></li>
                <li><a class="nav-link @(currentAction == "Projects" ? "active" : "")" href="/projects">Projects</a></li>
                <li><a class="nav-link @(currentAction == "Contact" ? "active" : "")" href="/contact">Contact</a></li>
            </ul>
        </div>

        <div class="main-content">
            @RenderBody()
        </div>

        <footer class="site-footer">
            <p>&copy; GAN SIONG BIN 2025. All rights reserved.</p>
        </footer>
    </body>
</html>